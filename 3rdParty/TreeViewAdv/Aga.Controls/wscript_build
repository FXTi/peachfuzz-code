#!/usr/bin/env python

deps = [
	'System.dll',
	'System.Data.dll',
	'System.Design.dll',
	'System.Drawing.dll',
	'System.Windows.Forms.dll',
	'System.Xml.dll',
]

bld(
	features = 'cs',
	use = deps,
	source = bld.path.ant_glob('**/*.cs **/*.resx'),
	name = 'Aga.Controls.dll',
	unsafe = True,
	keyfile = 'key.snk',
	version = False,
)

