	<!-- Create a simple data template containing a single string -->
	<DataModel name="RelationSizeTemplate">

		<String value="Length of following string is: " />
		<String>
			<Relation type="size" of="HelloWorld" />
		</String>
		<String value="\n" />
		<String name="HelloWorld" value="Hello World!" />

	</DataModel>
	
	<StateModel name="State" initialState="Initial">
		<State name="Initial">
			<Action type="output">
				<DataModel ref="RelationCountTemplate" />
			</Action>
		</State>
	</StateModel>
	
	<!-- Out tests set will contain this single test -->
	<Test name="Default">
		<StateModel ref="State" />

		<!-- Display test cases to the console -->
		<Publisher class="Console" />
	</Test>
</Peach>
